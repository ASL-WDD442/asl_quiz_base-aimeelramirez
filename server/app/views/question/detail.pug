extends ../_layout
include ../_includes/link_mixin
block content

      ul.list
        for value in question
         span= value.title
           span
            +link('/quiz/'+value.quizId, 'Return to Quiz', 'fa-eye', 'link')
            +link('/admin/questions/edit/'+value.id, 'Edit', 'fa-edit', 'link')
            +link('/admin/questions/delete/'+value.id, 'Delete', 'fa-trash', 'link linkSecondary')

        div
            h2.headingSecondary Choices
            ul.list
                for choice in choices
                    li.list__item
                        span.list__item__title= choice.value
                        div.list__item__footer
                            +link('/choices/'+choice.id, 'View', 'fa-eye', 'link')
                            +link('/admin/choices/edit/'+choice.id, 'Edit', 'fa-edit', 'link')
                            +link('/admin/choices/delete/'+choice.id, 'Delete', 'fa-trash', 'link linkSecondary')
